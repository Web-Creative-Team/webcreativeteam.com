    <!-- Custom Carousel Script -->
    <script src="/js/carousel.js"></script>
    <script src="/js/fadeOutMessages.js"></script>
    <script src="/js/mainNavToggle.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <!-- Global Quill Configuration -->
    <script src="/js/quillConfig.js"></script>
    <script src="/js/editArticle.js"></script>
