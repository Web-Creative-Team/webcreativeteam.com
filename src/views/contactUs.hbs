<main>
    {{#if messageContent}}
    <!-- Changed this so you can pass "red" or "green" from the server if desired -->
    <div class="messageContainer {{messageClass}}">
        <p class="messageText">{{messageContent}}</p>
    </div>
    {{/if}}

    <fieldset>
        <legend>Свържете се с нас</legend>

        <form id="contactForm" method="POST" action="/contacts">
            <!-- Name Input -->
            <label for="name">Вашето име <span class="redAsterix">*</span></label>
            <input type="text" id="name" name="name" value="{{name}}">
            <p class="inputRequirements {{#if (eq focusField 'name')}}red{{/if}}">
                Името трябва да съдържа поне 2 символа
            </p>

            <!-- Email Input -->
            <label for="email">Email <span class="redAsterix">*</span></label>
            <input type="email" id="email" name="email" value="{{email}}">
            <p class="inputRequirements {{#if (eq focusField 'email')}}red{{/if}}">
                Моля въведете валиден Email адрес
            </p>

            <!-- Phone Input -->
            <label for="phone">Телефонен номер</label>
            <input type="tel" id="phone" name="phone" value="{{phone}}">
            <p class="inputRequirements">
                Ако желаете посочете телефонният си номер
            </p>

            <!-- Message Input -->
            <label for="message">Вашето съобщение <span class="redAsterix">*</span></label>
            <textarea id="message" name="textMessage">{{textMessage}}</textarea>
            <p class="inputRequirements {{#if (eq focusField 'textMessage')}}red{{/if}}">
                Съобщението ви трябва да съдържа поне 10 символа
            </p>

            <!-- Hidden inputs for recaptcha and focusField -->
            <input type="hidden" id="recaptchaResponse" name="recaptchaResponse">
            <input type="hidden" id="focusField" value="{{focusField}}">

            <!-- Submit Button -->
            <button class="additionalStyle" type="submit">Изпрати</button>
        </form>
    </fieldset>

    <!-- JavaScript for Validation and Recaptcha -->
    <script src="/js/formValidation.js"></script>
    <script src="/js/recaptcha.js"></script>
</main>
