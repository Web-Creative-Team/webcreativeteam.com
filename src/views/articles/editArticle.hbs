    <fieldset>
        <legend>–†–µ–¥–∞–∫—Ç–∏—Ä–∞–Ω–µ –Ω–∞ —Å—Ç–∞—Ç–∏—è</legend>

        {{#if error}}
        <div class="messageContainer red">
            <p class="messageText">{{{error}}}</p>
        </div>
        {{/if}}

        <form id="editForm" method="POST" enctype="multipart/form-data">

            <label for="articleTitle">–ó–∞–≥–ª–∞–≤–∏–µ</label>
            <input type="text" name="articleTitle" id="articleTitle" value="{{articleTitle}}" />
            <p class="inputRequirements {{#if errors.articleTitle}}red{{/if}}">
                {{errors.articleTitle}}
            </p>

            <div style="max-width: 500px;">
                <img src="{{articleImage}}" alt="{{articleAlt}}" />
            </div>

            <label for="articleImage">–ö–∞—á–∏ –Ω–æ–≤–æ –æ—Å–Ω–æ–≤–Ω–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ (–ø–æ –∂–µ–ª–∞–Ω–∏–µ)</label>
            <input type="file" name="articleImage" id="articleImage">

            <label for="articleThumbnailImage">–ö–∞—á–∏ –Ω–æ–≤–æ –º–∏–Ω–∏–∞—Ç—é—Ä–Ω–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ (–ø–æ –∂–µ–ª–∞–Ω–∏–µ)</label>
            <input type="file" id="articleThumbnailImage" name="articleThumbnailImage">

            <label for="articleAlt">Alt –¢–µ–∫—Å—Ç –∑–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ—Ç–æ</label>
            <input type="text" id="articleAlt" name="articleAlt" value="{{articleAlt}}">
            <p class="inputRequirements {{#if errors.articleAlt}}red{{/if}}">
                {{errors.articleAlt}}
            </p>

            <label for="articleContent">–°—ä–¥—ä—Ä–∂–∞–Ω–∏–µ</label>
            <div id="editor-container"></div>
            <input type="hidden" name="articleContent" id="articleContent">
            <p class="inputRequirements {{#if errors.articleContent}}red{{/if}}">
                {{errors.articleContent}}
            </p>





            <label for="articleMetaTitle">Meta Title</label>
            <input type="text" id="articleMetaTitle" name="articleMetaTitle" value="{{articleMetaTitle}}">
            <p class="inputRequirements {{#if errors.articleMetaTitle}}red{{/if}}">
                {{errors.articleMetaTitle}}
            </p>

            <label for="articleMetaDescription">Meta Description</label>
            <input type="text" id="articleMetaDescription" name="articleMetaDescription" value="{{articleMetaDescription}}">
            <p class="inputRequirements {{#if errors.articleMetaDescription}}red{{/if}}">
                {{errors.articleMetaDescription}}
            </p>

            <button class="additionalStyle">–ó–∞–ø–∞–∑–∏ –ø—Ä–æ–º–µ–Ω–∏—Ç–µ</button>
        </form>

        <!-- Preload Existing Content Script -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Check if Quill is already initialized
                if (window.quill) {
                    // üëâ Inject the raw HTML directly into Quill
                    var editorContainer = document.querySelector('#editor-container .ql-editor');
                    editorContainer.innerHTML = `{{{articleContentRaw}}}`;
                }

                // Update hidden input before form submission
                var form = document.querySelector('form');
                form.onsubmit = function () {
                    var articleContent = document.querySelector('#articleContent');
                    articleContent.value = quill.root.innerHTML;
                };
            });
        </script>
        <script>
            // üëâ Pass the preloaded content as a global JavaScript variable
            window.preloadedContent = `{{{articleContentRaw}}}`;
        </script>
    </fieldset>