<fieldset>
    <legend>Edit Article</legend>
    <form method="POST">
        <label for="articleTitle">Title<span class="redAsterix">*</span></label>
        <input type="articleTitle" name="articleTitle" id="articleTitle" value="{{articleTitle}}"/>
        <p class="inputRequirements">Моля въведете име</p>

        <label for="articleImage">Image URL<span class="redAsterix">*</span></label>
        <input type="articleImage" name="articleImage" id="articleImage" value="{{articleImage}}"/>
        <p class="inputRequirements">Моля въведете изображение</p>

        <label for="articleContent">Content<span class="redAsterix">*</span></label>
        <textarea name="articleContent" id="articleContent">{{articleContent}}</textarea>
        <p class="inputRequirements">Моля въведете съдържание</p>

        <label for="articleMetaTitle">Meta Title<span class="redAsterix">*</span></label>
        <input name="articleMetaTitle" id="articleMetaTitle" value="{{articleMetaTitle}}"></input>
        <p class="inputRequirements">Моля въведете Meta Title (до 55 символа)</p>

        <label for="articleMetaDescription">Meta Description<span class="redAsterix">*</span></label>
        <input name="articleMetaDescription" id="articleMetaDescription" value="{{articleMetaDescription}}"></input>
        <p class="inputRequirements">Моля въведете Meta Description(до 136 символа)</p>

        <button class="additionalStyle">Edit Article</button>
    </form>
</fieldset>