<div class="articleImage">
    <img src="{{singleArticle.articleImage}}" alt="{{singleArticle.articleAlt}}" srcset="">
</div>

<div class="asideLayout">
    <main class="withAside">
        <h1>{{singleArticle.articleTitle}}</h1>
        
        <!-- Render Quill-formatted content safely with triple braces -->
        <div class="articleContent">
            {{{singleArticle.articleContent}}}
        </div>

        <p class="dateCreated">{{singleArticle.dateCreated}}</p>

        {{#if isAuthenticated}}
        <a class="editLink" href="/articles/{{singleArticle._id}}/edit">Edit</a>
        <a class="deleteLink" href="/articles/{{singleArticle._id}}/delete"
            onclick="return confirm('Are you sure you want to delete the article: {{singleArticle.articleTitle}}?');">
            Delete
        </a>
        {{/if}}
    </main>

    <aside class="blogAside">
        <h3>Други теми:</h3>
        <ul class="asideList">
            {{#each articles}}
            <li class="asideArticleListItem">
                <div class="aricleThumbnailImageContainer">
                    <img src="{{this.articleThumbnailImage}}" alt="{{this.articleAlt}}" srcset="">
                </div>
                <p class="asideListArticleTitle">
                    <a href="/articles/{{_id}}/details">{{articleTitle}}</a>
                </p>
            </li>
            {{/each}}
        </ul>
    </aside>
</div>
