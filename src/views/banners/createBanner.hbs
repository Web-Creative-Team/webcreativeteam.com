<main>
    <fieldset>
        <legend>Create Banner</legend>

        {{#if error}}
        <div class="messageContainer red">
            <p class="messageText">{{error}}</p>
        </div>
        {{/if}}

        <form id="createBannerForm" method="POST" action="/banners/create" enctype="multipart/form-data">
            <label for="bannerImage">Banner Image <span class="redAsterix">*</span></label>
            <input type="file" name="bannerImage" id="bannerImage" />
            <p class="inputRequirements {{#if errors.bannerImage}}red{{/if}}">{{errors.bannerImage}}</p>

            <label for="bannerTitle">Banner Title <span class="redAsterix">*</span></label>
            <input type="text" name="bannerTitle" id="bannerTitle" value="{{bannerTitle}}" />
            <p class="inputRequirements {{#if errors.bannerTitle}}red{{/if}}">{{errors.bannerTitle}}</p>

            <label for="bannerSubtitle">Banner Subtitle <span class="redAsterix">*</span></label>
            <input type="text" name="bannerSubtitle" id="bannerSubtitle" value="{{bannerSubtitle}}" />
            <p class="inputRequirements {{#if errors.bannerSubtitle}}red{{/if}}">{{errors.bannerSubtitle}}</p>

            <button class="additionalStyle">Create Banner</button>
        </form>
    </fieldset>
</main>
